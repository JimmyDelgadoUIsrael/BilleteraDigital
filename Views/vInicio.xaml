<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilleteraDigital.Views.vInicio"
             Title="vInicio">
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->
    <StackLayout Padding="20">
        <Button x:Name="btnNuevo" Text="âž• Nuevo" Clicked="btnNuevo_Clicked"/>
        <CollectionView x:Name="TransaccionesView" Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="Gray" CornerRadius="10">
                        <StackLayout >
                            <Label Text="{Binding Tipo}" FontAttributes="Bold"/>
                            <Label Text="{Binding Descripcion}"/>
                            <Label Text="{Binding Monto, StringFormat='Monto: {0:C}'}"/>
                            <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}" FontSize="12"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
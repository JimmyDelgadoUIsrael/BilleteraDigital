<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilleteraDigital.Views.vInicio"
             Title="vInicio">
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->
    <ScrollView>
        <StackLayout Padding="20">
            <Button x:Name="btnNuevo" Text="➕ Nuevo" Clicked="btnNuevo_Clicked"/>
            <CollectionView x:Name="TransaccionesView" Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                StrokeThickness="1"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 15"
                                Margin="5"
                                Padding="10">

                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Opacity="0.2"
                                        Offset="5,5"
                                        Radius="10"/>
                            </Border.Shadow>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding tipo}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#3F51B5"/>

                                <Label Text="{Binding descripcion}"
                   FontSize="14"/>

                                <Label Text="{Binding monto, StringFormat='Monto: {0:C}'}"
                   FontAttributes="Bold"
                   FontSize="14"/>

                                <Label Text="{Binding fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                   FontSize="12"
                   TextColor="Gray"/>

                                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                    <Button Text="✏️"
                        Clicked="btnEditar_Clicked"
                        CommandParameter="{Binding}"
                        BackgroundColor="Transparent"
                        TextColor="#1976D2"/>

                                    <Button Text="🗑"
                        Clicked="btnEliminar_Clicked"
                        CommandParameter="{Binding}"
                        BackgroundColor="Transparent"
                        TextColor="#D32F2F"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
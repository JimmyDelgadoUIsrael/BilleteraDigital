<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BilleteraDigital.Views.vInicio"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="vInicio">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Button
                x:Name="btnConfig"
                Clicked="btnConfig_Clicked"
                Text="Configuraciones" />

            <Button
                x:Name="btnNoticia"
                Clicked="btnNoticia_Clicked"
                Text="Noticias" />
            <Border
                Margin="0,0,0,10"
                Padding="15"
                BackgroundColor="White"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="10"
                        Offset="5,5" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="10">
                    <!--  Nombre del usuario  -->
                    <Label
                        x:Name="lblUsuario"
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="ðŸ‘¤ Usuario: Nombre"
                        TextColor="#333" />

                    <Label Text="{x:Static local:ConfiguracionUsuario.MonedaSeleccionada}" />

                    <!--  Ingresos y gastos  -->
                    <HorizontalStackLayout Spacing="20">
                        <Label
                            x:Name="lblTotalIngresos"
                            FontAttributes="Bold"
                            Text="ðŸ’° Ingresos: $0.00"
                            TextColor="#388E3C" />

                        <Label
                            x:Name="lblTotalGastos"
                            FontAttributes="Bold"
                            Text="ðŸ’¸ Gastos: $0.00"
                            TextColor="#D32F2F" />

                        <Label
                            x:Name="lblTotal"
                            FontAttributes="Bold"
                            Text=" Total: $0.00"
                            TextColor="Black" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            <Button
                x:Name="btnNuevo"
                Clicked="btnNuevo_Clicked"
                Text="âž• Nuevo" />
            <CollectionView x:Name="TransaccionesView" Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            BackgroundColor="White"
                            Stroke="LightGray"
                            StrokeShape="RoundRectangle 15"
                            StrokeThickness="1">

                            <Border.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Opacity="0.2"
                                    Radius="10"
                                    Offset="5,5" />
                            </Border.Shadow>

                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="{Binding tipo}"
                                    TextColor="#3F51B5" />

                                <Label FontSize="14" Text="{Binding descripcion}" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="{Binding montoMoneda, StringFormat='Monto: {0:C}'}" />

                                <Label
                                    FontSize="12"
                                    Text="{Binding fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                    TextColor="Gray" />

                                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                    <Button
                                        BackgroundColor="Transparent"
                                        Clicked="btnEditar_Clicked"
                                        CommandParameter="{Binding}"
                                        Text="âœï¸"
                                        TextColor="#1976D2" />

                                    <Button
                                        BackgroundColor="Transparent"
                                        Clicked="btnEliminar_Clicked"
                                        CommandParameter="{Binding}"
                                        Text="ðŸ—‘"
                                        TextColor="#D32F2F" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
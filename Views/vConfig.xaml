<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BilleteraDigital.Views.vConfig"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="vConfig">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label
            FontAttributes="Bold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="Billetera Digital"
            TextColor="#333" />
        <Image
            HeightRequest="150"
            HorizontalOptions="Center"
            Source="logotipo.png"
            WidthRequest="150" />

        <Picker x:Name="pckModena" Title="Selecciona Moneda">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>USD</x:String>
                    <x:String>EUR</x:String>
                    <x:String>MXN</x:String>
                    <x:String>JPY</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button
            x:Name="btnCambioMoneda"
            Clicked="btnCambioMoneda_Clicked"
            Text="Guardar Moneda" />


        <Button
            x:Name="btnAbout"
            Margin="0,20,0,0"
            BackgroundColor="#087a4b"
            Clicked="btnAbout_Clicked"
            HeightRequest="60"
            Text="About"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="BilleteraDigital.Views.vRegistroUser"
             Title="vRegistroUser">
   

        <Grid RowDefinitions=".3*,.7*">
            <Image Aspect="AspectFill" Source="login.png"/>
            <Grid BackgroundColor="#087A4B" Opacity=".6"/>

            <Grid ColumnDefinitions="*,*">
                <Image Aspect="AspectFit"
                   HeightRequest="180"
                   Source="logotipo.png"/>
                <skia:SKLottieView Grid.Column="1"
                               HeightRequest="160"
                               RepeatCount="-1"
                               Source="loginanimacion1.json"/>
            </Grid>

            <Grid Grid.Row="1">
                <RoundRectangle Margin="-5,-30,5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
                <VerticalStackLayout Margin="30,0,30,0">
                    <Label FontAttributes="Bold"
                       FontSize="Medium"
                       Text="Crear una cuenta"
                       TextColor="Black"/>
                    <Label Text="Llena tus datos para continuar"
                       TextColor="Gray"/>

                    <!-- Correo -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                        <Image HorizontalOptions="Center"
                           VerticalOptions="Center"
                           WidthRequest="40"
                           HeightRequest="40">
                            <Image.Source>
                                <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="40"
                                Color="#087a4b"/>
                            </Image.Source>
                        </Image>
                        <Entry x:Name="txtCorreo"
                           Grid.Column="1"
                           Placeholder="EMAIL"
                           Keyboard="Email"
                           VerticalOptions="Center"/>
                    </Grid>

                    <!-- Contraseña -->
                    <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                        <Image HorizontalOptions="Center"
                           VerticalOptions="Center"
                           WidthRequest="40"
                           HeightRequest="40">
                            <Image.Source>
                                <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf084;"
                                Size="40"
                                Color="#087a4b"/>
                            </Image.Source>
                        </Image>
                        <Entry x:Name="txtPassword"
                           Grid.Column="1"
                           Placeholder="CONTRASEÑA"
                           IsPassword="True"
                           VerticalOptions="Center"/>
                    </Grid>

                    <Button Margin="0,30,0,0"
                        BackgroundColor="#087a4b"
                        HeightRequest="60"
                        Text="Registrarme"
                        TextColor="White"
                        Clicked="OnRegistrarClicked"/>

                <Button
                        Margin="0,30,0,0"
                        BackgroundColor="#FBF6FD"
                        HeightRequest="60"
                        Text="Ya soy cliente"
                        TextColor="#087a4b"
                        Clicked="OnAtras"/>
                    
            </VerticalStackLayout>
            </Grid>
        </Grid>
    </ContentPage>

